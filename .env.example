# Supabase Configuration (Authentication)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# Replace placeholders with real Supabase credentials to avoid demo mode

# PostgreSQL Database Configuration (Recipes)
DATABASE_URL=postgresql://username:password@your-vps-ip:5432/chefito_db
POSTGRES_HOST=your-vps-ip
POSTGRES_PORT=5432
POSTGRES_DB=chefito_db
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# ElevenLabs API for Voice AI
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# RevenueCat Configuration
NEXT_PUBLIC_REVENUECAT_API_KEY=your_revenuecat_public_api_key
REVENUECAT_WEBHOOK_SECRET=your_revenuecat_webhook_secret

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://chefito.xyz

# Ollama AI Assistant
OLLAMA_ENDPOINT=http://your-vps-ip:11434/api/generate
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M

# Admin Access
ADMIN_EMAIL=admin@chefito.xyz
ADMIN_PASSWORD=your_secure_admin_password

# Environment
NODE_ENV=production